<% if user_signed_in? && current_user.owner == true %>

<div class="d-flex" id="wrapper">
  <!-- Sidebar -->
  <div class="bg-light border-right" id="sidebar-wrapper">
    <div class="sidebar-heading"><%= current_user.first_name%> <%= current_user.last_name%> </div>
    <div class="list-group list-group-flush">
      <a href="mycampaigns/owners_dashboard" class="list-group-item list-group-item-action bg-light">Dashboard</a>
      <a href="/mycampaigns" class="list-group-item list-group-item-action bg-light">Campaign</a>
      <a href="/mycampaigns/support" class="list-group-item list-group-item-action bg-light">Support</a>
    </div>
  <!-- /#closing-wrapper -->
  </div>
<!-- /#closing-wrapper -->

<div id="page-content-wrapper">
  <div class="container-fluid">
    <h3>Hi there, <%= current_user.first_name%></h3>
    <p>Ready to launch your first campaign?</p>
    <h5><%= link_to "Create Campaign", "/campaigns/new", class: "btn btn-secondary" %></h5>
  </div>
</div>


<%#= render "devise/shared/links" %>

<% else %>
<%= "Sign up as a raiser now!" %>
<% end %>
