<div class="container">
  <div class="row justify-content-center position-absolute" style="top: 250px;">
    <div class="col-8">
      <!-- COMPANY LOGO -->
      <div class="restaurant-logo">
        <img class="" style="border-radius: 20px; border-color: 1px solid white; height: 144px; box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);" src="https://www.pinclipart.com/picdir/middle/78-785464_clipart-restaurant-lunch-restaurant-cubiertos-para-colorear-png.png" alt="avatar">
      </div>

      <h2 class="my-3">Tipo Siete</h2>
      <!-- CAMPAIGN PROGRESS STATUS -->
      <div class="card-campaign-status p-2 my-4" style="width: 500px; background-color: #f4f4f4; border-radius: 20px; box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);">
        <div class="target-bar m-3" style="background-color: white; border-radius: 50px;">
          <div class="" style="background-color: #1EDD88; width: 67%; border-radius: 50px;">
            <p class="px-3">67%</p>
          </div>
        </div>

        <div class="d-flex mt-4 justify-content-around align-items-center">
          <div class="text-center">
            <h5>###</h5>
            <p class="text-secondary" style="font-size: 12px;">investors</p>
          </div>
          <div style="border: 1px solid lightgrey; height: 50px"></div>
          <div class="text-center">
            <h5>$##,###</h5>
            <p class="text-secondary" style="font-size: 12px;">raised</p>
          </div>
          <div style="border: 1px solid lightgrey; height: 50px"></div>
          <div class="text-center">
            <h5>##d ##h</h5>
            <p class="text-secondary" style="font-size: 12px;">remaining</p>
          </div>
        </div>

      </div>

      <div class="card-risk-level p-3 mb-4" style="width: 500px; background-color: #f4f4f4; border-radius: 20px; box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);">
        <div class="p-2 d-flex justify-content-around align-items-center" style="background-color: white; border-radius: 16px;">
          <div class="text-center">
            <p class="m-0">Risk Level</p>
            <span style="font-size: 48px; font-weight: bold; margin: 0;"><p class="m-0">#</p></span>
          </div>
          <div style="border: 1px solid lightgrey; height: 80px"></div>
          <div>
            <div style="color: darkgrey;">
              <p class="m-0 mr-2">Repayment Capacity</p>
              <p class="m-0 mr-2">Financial Health</p>
              <p class="m-0 mr-2">Company History</p>
            </div>
          </div>
        </div>
      </div>

      <h5>10 days left</h5>
      <p>A quality and relaxing rural country pub, run by award winning owners. The building and decor are charming and rustic, with elegant modern touches overlooking open country fields or in a pretty courtyard filled with flowers in the summer months.</p>
      <h4>$100,000 target</h4>
    </div>

    <!-- ------------------------------------------------------------------------------------ -->
    <!-- ------------------------------------------------------------------------------------ -->

    <div class="col-4">

      <!-- investment card -->
      <div class="d-flex justify-content-center">
        <div class="position-fixed" style="padding-right: 80px;">

          <div class="card-investment-play p-4 m-0" style="width: 300px; background-color: #f4f4f4; border-radius: 20px; box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);">
            <!-- invest field and button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="input">$ ###</p>
              <div class="">
                <h5><%= link_to "Invest", "/", class: "btn btn-success" %></h5>
              </div>
            </div>

            <!-- campaign stats -->
            <div class="my-2 d-flex justify-content-between">
              <div class="text-center">
                <h5 class="m-0">5%</h5>
                <p class="text-secondary m-0" style="font-size: 12px;">return</p>
              </div>
              <div class="align-self-center" style="border: 1px solid lightgrey; height: 50px">
              </div>
              <div class="text-center">
                <h5 class="m-0">48</h5>
                <p class="text-secondary m-0" style="font-size: 12px;">months</p>
              </div>
              <div class="align-self-center" style="border: 1px solid lightgrey; height: 50px">
              </div>
              <div class="text-center">
                <h5 class="m-0">$100,000</h5>
                <p class="text-secondary m-0" style="font-size: 12px;">target</p>
              </div>
            </div>

            <div class="my-1 d-flex flex-column justify-content-between">
              <!-- range slider  -->
              <div class="investment-slider my-3">
                <label for="customRange" style="font-size: 12px;">Investment</label>
                <input type="range" class="custom-range" min="100" max="1000" step="20" id="customRange3">
              </div>
            </div>

            <!-- return section -->
            <div class="my-2">
              <div class="d-flex justify-content-around">
                <div class="d-flex flex-column text-center">
                  <h5 class="m-0">$2.5</h5>
                  <p class="text-secondary m-0" style="font-size: 12px;">per month</p>
                </div>
                <div>X</div>
                <div class="d-flex flex-column text-center">
                  <h5 class="m-0">48</h5>
                  <p class="text-secondary m-0" style="font-size: 12px;">months</p>
                </div>
                <div>=</div>
                <div class="d-flex flex-column text-center">
                  <h5 class="m-0">$120</h5>
                  <p class="text-secondary m-0" style="font-size: 12px;">total return</p>
                </div>
              </div>
            </div>

            <!-- rewards section -->
            <div class="mt-4">
              <h5>My rewards</h5>
              <div class="d-flex align-items-center px-3 py-1" style="background-color: lightgrey; border-radius: 50px;">
                <i class="fas fa-gift"></i>
                <p class="m-0 ml-4">1x dinner</p>
              </div>
            </div>

          </div>
        </div>
        <!-- investment card closing div -->
      </div>
    </div>
  </div>
</div>
</div>
