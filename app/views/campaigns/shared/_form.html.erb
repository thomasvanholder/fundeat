    toggle.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById("company-form").classList.toggle('d-none');
      document.getElementById("campaign-form").classList.toggle('d-none');
    });

    const toggle2 = document.getElementById("continue2");
    toggle2.addEventListener('click', (e) => {
