 <div class="container w-50">
  <div class="justify-content-center text-center">

    <h3>Your Company</h3>
    <%= simple_form_for(@campaign) do |c| %>
    <%= c.error_notification %>
    <%= c.error_notification message: c.object.errors[:base].to_sentence if c.object.errors[:base].present? %>

  <div id="company-form">

      <%= simple_fields_for(@company) do |f| %>
      <!-- company name input -->
      <div class="form-group row">
        <label for="company_name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10 w-50">
          <input type="text" class="form-control" name="company[name]" id="company_name">
        </div>
      </div>

      <!-- address search field -->
      <div class="form-group row">
        <label class="col-sm-2 col-form-label string optional" for="company_address">Address</label>
        <div class="col-sm-10 w-50">
          <input id="searchbox" class="form-control mr-sm-2 text-left" type="search" aria-label="Search" name="company[address]">
        </div>
      </div>

      <!-- number of employees -->
      <div class="form-group row">
        <label class="col-sm-2 col-form-label string optional" for="company_num_of_employees">Employees</label>
        <div class="col-sm-10 w-50">
         <input type="text" class="form-control" name="company[num_of_employees]" id="company[num_of_employees]">
       </div>
     </div>

     <!-- category choice -->

     <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="company_type_store">Type Store</label>


      <div class="col-sm-10 w-50 align-self-center">
        <div class="custom-control custom-radio custom-control-inline">
          <input type="radio" value="restaurant" id="company[type_store]" name="company[type_store]" class="custom-control-input">
          <label class="custom-control-label" for="company_type_store">Restaurant</label>
        </div>

        <div class="custom-control custom-radio custom-control-inline">
          <input type="radio" value="coffee"  id="company[type_store]" name="company[type_store]" class="custom-control-input">
          <label class="custom-control-label" for="company_type_store">Coffee</label>
        </div>

        <div class="custom-control custom-radio custom-control-inline">
          <input type="radio" value="bar"  id="company[type_store]" name="company[type_store]" class="custom-control-input">
          <label class="custom-control-label" for="company_type_store">Bar</label>
        </div>
      </div>


    </div>

    <div class="input-group">
      <div class="input-group-prepend">
        <label class="col-sm-2 col-form-label string optional" for="company_description">Company Description</label>
      </div>
      <textarea class="form-control" name="company[description]" id="company[description]" aria-label="With textarea"></textarea>
    </div>

    <br>
    <button class="btn btn-outline-secondary" type="submit">Back</button>
    <button class="btn btn-secondary" type="submit" id="continue">Continue</button>

    <div>All data completed?</div>

    <% end %>

  </div>

  <br>
  <br>

  <div id="campaign-form" class="d-none" style="">

    <h3>Your campagin</h3>

    <div class="form-inputs">

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" style="width: 200px;">Campaign Title</span>
        </div>
        <textarea class="form-control" id="campaign_title" aria-label="With textarea"></textarea>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" style="width: 200px;">Campaign description</span>
        </div>
        <textarea class="form-control" id="campaign_description" aria-label="With textarea"></textarea>
      </div>

      <div class="input-group mb-3">
        <label class="string optional w-25" for="min_target">Minimum Amount</label>
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="text" class="integer form-control text-right" aria-label="Amount (to the nearest dollar)" name="campaign[min_target]" id="campaign_min_target">
        <div class="input-group-append">
          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="input-group mb-3">
        <label class="string optional w-25" for="min_target">Maximum Target</label>

        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="text" class="integer form-control text-right" aria-label="Amount (to the nearest dollar)" name="campaign[max_target]" id="campaign_max_target">
        <div class="input-group-append">
          <span class="input-group-text">.00</span>
        </div>
      </div>


      <!-- Radio button inline loan duration -->
      <label class="string optional w-25" for="campaign_loan_duration">Loan duration</label>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" value="12" id="campaign_loan_duration_12" name="campaign[loan_duration]" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline1">12</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" value="24"  id="campaign_loan_duration_24" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline2">24</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" value="36"  id="campaign_loan_duration_36" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline2">36</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" value="48"  id="campaign_loan_duration_48" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline2">48</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" value="60"  id="campaign_loan_duration_60" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline2">60</label>
      </div>

    </div>

    <div class="form-actions">
      <%= c.button :submit, class:"btn btn-secondary" %>
    </div>
    <% end %>
  </div>


</div>
</div>

 <script>
    const toggle = document.getElementById("continue");
    toggle.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById("company-form").classList.toggle('d-none');
      document.getElementById("campaign-form").classList.toggle('d-none');
    });
  </script>

<style>
  .custom-control-input {
    z-index: 101;
  }
</style>

