<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v6.0&appId=473258800225898&autoLogAppEvents=1"></script>

<div class="vh-100" style="background-size: cover; background-image: url('https://images.unsplash.com/photo-1579027989536-b7b1f875659b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80');">
  <div class="container">
    <div class="row justify-content-center">
      <div class="log-12 log-lg-6">
        <div class="px-4 pt-4 pb-2 mt-5" style="background-color: white; opacity: 0.95; border-radius: 5px;">

          <div class="m-4">
            <h2>Log in to Fundeat</h2>
          </div>

          <!--<div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="false"></div> -->
          <%#= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Log in", class:"btn btn-success m-3 px-5" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
