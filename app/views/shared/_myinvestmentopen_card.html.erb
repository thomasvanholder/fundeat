<div class=" d-flex flex-wrap justify-content-center">
<% @open.each do |investment| %>
      <% raised = Investment.where(campaign_id: investment.campaign.id).sum("amount") %>
      <% target = investment.campaign.min_target %>
      <% status = ((raised.to_f/target)*100).round(1) %>
  <div class="card-wrapper p-4 m-4">
      <!-- investment card -->
    <div class="card-investment2">
      <div class="card-user">
        <% if investment.campaign.company.type_store == "Restaurant" %>
        <%= image_tag "restaurant.png", class:"avatar-m-square", alt: "avatar" %>
        <% elsif investment.campaign.company.type_store == "Bar" %>
        <%= image_tag "bar.png", class:"avatar-m-square", alt: "avatar" %>
        <% else %>
        <%= image_tag "cafe.png", class:"avatar-m-square", alt: "avatar" %>
        <% end %>
      </div>
        <!-- background pic -->
        <!-- insert company.photo -->
      <% if investment.campaign.company.photo.attached? %>
        <%= cl_image_tag investment.campaign.company.photo.key, class: "card-pic"%>
      <% else %>
        <img class="card-pic" src="https://source.unsplash.com/1600x900/?food" class="card-img-top" alt="food-img">
      <% end %>


      <% days_left = ((investment.campaign.expiry_date - Time.now)/86400).round(0) %>
      <% if days_left >= 2 %>
        <h5><span class="badge badge-open "> <%= days_left%> days left  </span></h5>
      <% elsif days_left = 1 %>
        <h5><span class="badge badge-open "> <%= days_left%> day left  </span></h5>
      <% else %>
        <h5 class="pb-0"> <span class="badge badge-closed ">Funded </span></h5>
      <% end %>


      <h1 class="mt-0"><%= investment.campaign.company.name %>
      </h1>
      <!-- Info for campaign -->
      <div class="box-align" >
        <h4>Campaign Overview</h4>
          <ul>
            <li><p>Campaign target: $ <%= number_with_delimiter(investment.campaign.min_target, :delimiter => ',') %></p> </li>
            <li><p> Funding Status: <%= status %> % ($ <%= raised %>)</p></li>
            <li><p> #Investors:  <%= Investment.where(campaign_id: investment.campaign.id).count %></p> </li>
            <li><p>Avge Inv Rate <%= (investment.campaign.return_rate*100).round(1)  %> %</p> </li>
            <li><p>Exp.Date <%= (investment.campaign.expiry_date)&.strftime("%m/%d/%Y")  %> </p> </li>
          </ul>
        <h4>Your Investment </h4>
          <ul>
            <li><p>Your current investment: $ <%= investment.amount %> </p></li>
            <% if investment.payment_date.nil? %>
            <li><p> Payment date: Pending </p></li>
            <% else %>
            <li><p> Payment date: <%= investment.payment_date&.strftime("%m/%d/%Y") %></p></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>
</div>

