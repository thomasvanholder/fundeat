<div class="d-flex" id="wrapper">
  <!-- Sidebar -->
  <div class="bg-light border-right" id="sidebar-wrapper">
    <div class="sidebar-heading"><%= current_user.last_name%> <%= current_user.first_name%> </div>
    <div class="list-group list-group-flush">
      <a href="/investments/dashboard" class="list-group-item list-group-item-action bg-light">Dashboard</a>
      <a href="/investments/dashboard/myinvestments" class="list-group-item list-group-item-action bg-light">Investments</a>
      <a href="/investments/dashboard/myrewards" class="list-group-item list-group-item-action bg-light">Rewards</a>
      <a href="/investments/dashboard/mymap" class="list-group-item list-group-item-action bg-light">Map</a>

    </div>
  </div>







  <div class="col-10 ">

    <div class="container d-flex">

      <% @investments.each do |investment| %>
      <div class="card-wrapper d-flex">
        <!-- investment card -->
        <div class="card-investment">
          <div class="card-user">
            <img class="avatar-m-square" src="https://www.pinclipart.com/picdir/middle/78-785464_clipart-restaurant-lunch-restaurant-cubiertos-para-colorear-png.png" alt="avatar">
          </div>
          <!-- background pic -->
          <!-- insert company.photo -->
          <img class="card-pic"src="https://images.unsplash.com/photo-1498654896293-37aacf113fd9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="food pic">
          <!-- <h5>10 days left</h5> -->
          <h5><%#= ((investment.campaign.expiry_date - Time.now)/86400).round(0)%> days left</h5>

          <h1><%#= investment.campaign.company.name %></h1>
          <div style="height: 50px">
            <p><%= investment.campaign.title %></p>
          </div>

          <div class="box-align">
            <h4>$ <%#= number_with_delimiter(investment.max_target, :delimiter => ',') %> target</h4>
          </div>
          <div class="target-bar">
            <%# raised = Investment.where(investment_id: investment.id).sum("amount") %>
            <%# target = investment.max_target %>
            <%# status = ((raised.to_f/target)*100).round(1) %>
            <div>
              <progress value=<%#= status %> max="100" id="progress-bar-percentage" class="progress-bar notfull">
              </progress>
            </div>
            <div class="relative"> <p><%#= status %> %</p></div>
          </div>

          <style>
            div.relative {
              position: relative;
              left: 0px;
              bottom:23px;

            }
          </style>

          <div class="box-align d-flex justify-content-between">
            <div class="text-center">
              <h4>$ <%#= number_with_delimiter(Investment.where(investment_id: investment.id).sum("amount"), :delimiter => ',') %></h4>
              <p>raised</p>
            </div>
            <div class="align-self-center" style="border: 1px solid lightgrey; height: 50px">
            </div>
            <div class="text-center">
              <h4><%#= (investment.return_rate*100).round(1) %>%</h4>
              <p>interest</p>
            </div>
            <div class="align-self-center" style="border: 1px solid lightgrey; height: 50px">
            </div>
            <div class="text-center">
              <h4><%#= Investment.where(investment_id: investment.id).count%></h4>
              <p>investors</p>
            </div>
          </div>
        </div>
      </div>
      <!-- # investment card closing div -->
      <% end %>


    </div>


  </div>
</div>
