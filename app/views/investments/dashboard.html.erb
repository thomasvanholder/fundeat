
  <div class="row">

    <div class="col-sm-2">
      <%= render '/shared/investor_dashboard_sidebar' %>
    </div>

    <div class="col-sm-10">
      <!-- KPIs BOX-->
      <div class="d-flex justify-content-around align-items-center m-4" style="height: 150px;" id="page-content-wrapper">

        <!-- Insert cardsinfo -->
        <div class="card-campaign-status kpibox m-5">
          <div class="d-flex mt-4 justify-content-around align-items-center">
            <div class="text-center">
              <h2 class="m-3 kpidash"><%= number_with_delimiter(@investments.where.not(payment_date: nil).sum(:amount), :delimiter => ',')%></h2>
              <h2 class="text-secondary mb-2" style="font-size: 20px;">$ Invested</h2>
            </div>
          </div>
        </div>

        <div class="card-campaign-status kpibox m-5">
          <div class="d-flex mt-4 justify-content-around align-items-center">
            <div class="text-center">
              <h2 class="m-3 kpidash"><%= @avge_int_rate*100.round(0)%></h2>
